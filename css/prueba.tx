/* === ENLACES === */
a {
  color: var(--primary);
  text-decoration: none;
  font-weight: var(--font-weight-2);
  transition: color 0.3s ease;
}

a:hover {
  color: var(--secondary);
  text-decoration: underline;
}

/* === CARRUSEL === */
.carousel {
  margin-top: 10px;
  overflow-x: auto;
  white-space: nowrap;
  padding: 10px 0;
}

.carousel-container {
  display: flex;
  gap: 10px;
}

.carousel img, .carousel video {
  border-radius: 8px;
  max-height: 300px;
  object-fit: cover;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
}

/* === BOTONES / EFECTOS === */
button, .btn {
  background-color: var(--primary);
  color: white;
  padding: 10px 18px;
  border: none;
  border-radius: 5px;
  font-weight: var(--font-weight-3);
  cursor: pointer;
  transition: background 0.3s ease;
  font-family: 'Montserrat', sans-serif;
}

button:hover, .btn:hover {
  background-color: var(--secondary);
}

/* === DETALLES DEPLEGABLES (ASIGNATURAS) === */
details {
  margin-bottom: 1.5em;
  border: 1px solid #ddd;
  border-radius: 6px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.05);
  padding: 10px 15px;
  background: #fafafa;
  transition: background 0.3s ease;
}

details:hover {
  background-color: #e0f7f3;
}

body.active details {
  background: #2a2a2a;
  border-color: #444;
}

body.active details[open] {
  background: #333;
}

summary {
  cursor: pointer;
  font-weight: var(--font-weight-3);
  font-size: 1.1em;
  color: var(--primary);
  outline: none;
  transition: background-color 0.3s ease;
}

summary:hover {
  border-radius: 4px;
}

details[open] {
  background: #f1fdfb;
  border-color: var(--primary);
}

summary::-webkit-details-marker {
  display: none;
}

/* === COLUMNAS POR CURSO === */
.course-columns {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 40px;
  margin-top: 30px;
}

.course-column {
  flex: 1 1 calc(48% - 20px);
  min-width: 300px;
  box-sizing: border-box;
}

.course-column details h3 {
  max-width: 95%;
  margin: 0 auto 1.5em;
}

/* === PEQUEÑOS DETALLES === */
small {
  color: #666;
  font-size: 0.85em;
  display: block;
  margin-top: 6px;
}


@media (max-width: 768px) {
  .course-column {
    flex: 1 1 100%;
  }
}

@media (min-width: 1200px) {
  .course-column {
    flex: 1 1 calc(33.333% - 20px);
  }
}

/* === FOOTER === */
footer {
  text-align: center;
  font-size: 0.9em;
  color: #888;
  border-top: 1px solid #eee;
  padding: 20px;
  background-color: var(--bg);
}
